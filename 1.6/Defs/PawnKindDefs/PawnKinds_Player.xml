<?xml version="1.0" encoding="UTF-8"?>
<Defs>

    <!--
    These PawnKindDefs serve as templates to be used for the Dark Lurker and Soul Hunter paths.
    Currently, only forced traits, starting hediffs, and fixed childhood/adulthood backtories are used, and this is not extensible. That may change in the future.
    -->

    <PawnKindDef Name="ABF_PawnKind_Justiciar_Base" ParentName="BasePlayerPawnKind" Abstract="True">
        <defaultFactionDef>PlayerColony</defaultFactionDef>
        <fixedChildBackstories>
            <li>ABF_Backstory_Justiciar_Childhood_Risen</li>
        </fixedChildBackstories>
        <fixedAdultBackstories>
            <li>ABF_Backstory_Justiciar_Adulthood_Risen</li>
        </fixedAdultBackstories>
        <initialResistanceRange>13~21</initialResistanceRange>
    </PawnKindDef>

    <PawnKindDef ParentName="ABF_PawnKind_Justiciar_Base">
        <defName>ABF_PawnKind_Justiciar_Player_DarkLurker</defName>
        <label>dark lurker</label>
        <forcedTraits>
            <ABF_Trait_Justiciar_Adherent>1</ABF_Trait_Justiciar_Adherent>
        </forcedTraits>
        <startingHediffs>
            <li>
                <def>ABF_Hediff_Justiciar_DarkLurker</def>
            </li>
        </startingHediffs>
        <abilities>
            <li>ABF_Ability_Justiciar_ConjureDarkness</li>
        </abilities>
    </PawnKindDef>

    <PawnKindDef ParentName="ABF_PawnKind_Justiciar_Base">
        <defName>ABF_PawnKind_Justiciar_Player_SoulHunter</defName>
        <label>soul hunter</label>
        <forcedTraits>
            <ABF_Trait_Justiciar_Adherent>2</ABF_Trait_Justiciar_Adherent>
        </forcedTraits>
        <startingHediffs>
            <li>
                <def>ABF_Hediff_Justiciar_SoulHunter</def>
            </li>
        </startingHediffs>
        <abilities>
            <li>ABF_Ability_Justiciar_Shadestep</li>
        </abilities>
    </PawnKindDef>

</Defs>